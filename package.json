{
  "name": "pin-api",
  "version": "1.2.0",
  "description": "Pin Payments API wrapper",
  "main": "dist/index.js",
  "repository": "https://github.com/martinwheeler/pin-api.git",
  "author": "Martin Wheeler",
  "license": "MIT",
  "scripts": {
    "test": "jest --runInBand",
    "watch": "jest --runInBand --watch",
    "build": "NODE_ENV=production babel lib/index.js --out-file dist/index.js",
    "build:jest": "babel jest.config.js --out-file jest.config.dist.js"
  },
  "pre-commit": [
    "build",
    "test"
  ],
  "dependencies": {
    "request": "2.81.0",
    "undefsafe": "2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-uglify": "^1.0.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "dotenv": "^4.0.0",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "jest-junit-reporter": "^1.1.0",
    "moment": "^2.18.1",
    "pre-commit": "^1.2.2"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "notify": false,
    "collectCoverage": false,
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "testURL": "file://<rootDir>",
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
