{
  "name": "pin-api",
  "version": "1.0.0",
  "description": "Pin Payments API wrapper",
  "main": "dist/index.js",
  "repository": "https://github.com/martinwheeler/pin-api.git",
  "author": "Martin Wheeler",
  "license": "MIT",
  "scripts": {
    "test": "yarn build && jest --watch",
    "build": "babel lib/index.js --out-file dist/index.js",
    "build:jest": "babel jest.config.js --out-file jest.config.dist.js"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-polyfill": "^6.23.0",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^20.0.4",
    "jest-junit-reporter": "^1.1.0",
    "moment": "^2.18.1"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "notify": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "testUrl": "file://<rootDir>",
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
